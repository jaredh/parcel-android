<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/package_location_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World"
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="@color/package_title_text"/>

    <TextView
        android:id="@+id/package_location_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Description text here."
        android:textColor="@color/description_text"/>

    <TextView
        android:id="@+id/package_location_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="normal"
        android:textColor="@color/description_text"
        android:textSize="12dp"
        android:text="Date"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="4dp"/>

</LinearLayout>